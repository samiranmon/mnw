<config>

    <modules>

        <Ced_SocialLogin>
            <version>0.1.1</version>
			<release_version>0.1.14</release_version>
			<parent_product_name>Social Login</parent_product_name>
			<author>CedCommerce Magento Core Team (magentocoreteam@cedcommerce.com)</author>
        </Ced_SocialLogin>

    </modules>

    <default>

        <ced>

            <ced_sociallogin_google>

                <enabled>0</enabled>

            </ced_sociallogin_google>

            <ced_sociallogin_facebook>

                <enabled>0</enabled>

            </ced_sociallogin_facebook>	    

            <ced_sociallogin_twitter>

                <enabled>0</enabled>

            </ced_sociallogin_twitter>	    	    

        </ced>
        <system>
			<license>
				<use_https>0</use_https>
				<license_url>sociallogin/adminhtml_license/index/</license_url>
				<activate_url>cedcommerce.com/licensing/validate/</activate_url>
			</license>
        </system>

    </default>

    <frontend>

        <translate>

            <modules>

                <Ced_SocialLogin>

                     <files>

                        <default>Ced_SocialLogin.csv</default>

                     </files>

                </Ced_SocialLogin>

            </modules>

        </translate>        

        <layout>

            <updates>

                <Ced_SocialLogin>

                    <file>ced/sociallogin/sociallogin.xml</file>

                </Ced_SocialLogin>

            </updates>

        </layout>

    </frontend>    

    <global>

        <models>

            <sociallogin>

                <class>Ced_SocialLogin_Model</class>

            </sociallogin>

        </models>

        <blocks>
        
        <rewrite>
			<cedcommerce_fancy_url>
				<from><![CDATA[/cedcommerce\/main\/(.*)/i]]></from>
				<to><![CDATA[cedsociallogin/main/$1]]></to>
				<complete>1</complete>
			</cedcommerce_fancy_url>
			</rewrite>

            <sociallogin>

                <class>Ced_SocialLogin_Block</class>

            </sociallogin>            

        </blocks>

        <helpers>

            <ced_sociallogin>

                <class>Ced_SocialLogin_Helper</class>

            </ced_sociallogin>

        </helpers>

        <resources>

            <ced_sociallogin_setup>

                <setup>

                    <module>Ced_SocialLogin</module>

                    <class>Ced_SocialLogin_Model_Mysql4_Setup</class>

                </setup>

            </ced_sociallogin_setup>

        </resources>        

    </global>

    <frontend>

        <routers>

            <ced_sociallogin>

                <use>standard</use>

                <args>

                    <module>Ced_SocialLogin</module>

                    <frontName>cedsociallogin</frontName>

                </args>

            </ced_sociallogin>

        </routers>  
    </frontend> 
    <admin>
        <routers>
            <sociallogin>
                <use>admin</use>
                <args>
                    <module>Ced_SocialLogin</module>
                    <frontName>sociallogin</frontName>
                </args>
            </sociallogin>
        </routers>
    </admin>

	 <adminhtml>
	
        <layout>
            <updates>
                <ced_sociallogin>
                     <file>ced/sociallogin/sociallogin2.xml</file>
                </ced_sociallogin>
            </updates>
        </layout>
    
	 <events>
         <controller_action_layout_load_before>
				<observers>
                    <layout_load_before_cedcommerce>
                        <class>sociallogin/observer</class>
                        <method>beforeLoadingLayout</method>
                    </layout_load_before_cedcommerce>
                </observers>
			</controller_action_layout_load_before> 
	 </events> 

        <acl>

            <resources>

				<all>
					 <title>Allow Everything</title>
				</all>
                <admin>

                    <children>

                        <system>

                            <children>

                                <config>

                                    <children>

                                        <ced>

                                            <title>Social Login</title>

                                        </ced>

 										<cedcore>
									 	  <title>CedCommerce Extensions</title> 
									 	</cedcore>
                                    </children>

                                </config>

                            </children>

                        </system>

                    </children>
					

                </admin>
				
				

            </resources>

        </acl>
        <translate>
            <modules>
                <Ced_SocialLogin>
                    <files>
                        <default>Ced_SocialLogin.csv</default>
                    </files>
                </Ced_SocialLogin>
            </modules>
        </translate>
    </adminhtml>   

</config>

