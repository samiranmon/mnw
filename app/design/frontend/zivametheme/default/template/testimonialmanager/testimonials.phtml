                <div class="latest_scoop_box_img">
                    <?php if ($testimonial->getTestimonialImg()): ?>
                         <img alt="<?php echo $testimonial->getTestimonialName(); ?>" src="<?php echo $this->getResizedImage($testimonial->getTestimonialImg(), 120, 120); ?>" />
