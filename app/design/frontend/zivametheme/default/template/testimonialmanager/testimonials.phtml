<?php $testimonials = $this->_getCollection(); ?>
<?php $i = 0; ?>
<?php if (count($testimonials) > 0): ?>
    <?php foreach ($testimonials as $testimonial): ?>
        <div class="item">
            <div class="latest_scoop_box">
                
                <div class="latest_scoop_box_text">
                    <h4><?php echo $testimonial->getTestimonialName(); ?></h4>
                    <p><?php echo $testimonial->getTestimonialText(); ?></p>
                    <?php if ($testimonial->getTestimonialCompany() != '') { ?>
                        <span><?php echo $testimonial->getTestimonialCompany(); ?></span>
                    <?php } ?>
                    <div class="line"></div>
